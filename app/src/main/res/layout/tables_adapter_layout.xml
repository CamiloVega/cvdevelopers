<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/table_adapter_title"
        android:id="@+id/table_adapter_tabletile"
        android:textSize="@dimen/tables_row_font_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/client_title"
        android:id="@+id/table_adapter_clients"
        android:textSize="@dimen/tables_row_font_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/status_title"
        android:id="@+id/textView3"
        android:layout_below="@+id/table_adapter_tabletile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/tables_row_font_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/last_checked_title"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/tables_row_font_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5:50"
        android:id="@+id/table_adapter_lastcheckedlabel"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"

        android:textSize="@dimen/tables_row_font_size" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kids_title"
        android:id="@+id/table_adapter_kidcheckbox"
        android:checked="false"
        android:textSize="@dimen/tables_row_font_size"
        android:layout_alignBottom="@+id/table_adapter_clients"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/table_adapter_statuslabel"
        android:layout_below="@+id/table_adapter_tabletile"
        android:layout_toRightOf="@+id/table_adapter_tabletile"
        android:layout_toEndOf="@+id/table_adapter_tabletile"
        android:textSize="@dimen/tables_row_font_size" />
</RelativeLayout>
