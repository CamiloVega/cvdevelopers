<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.waitermanager.cvdevelopers.waitermanager.MenuActivity"
    android:background="@mipmap/menu_background">

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menu_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/order_review_horizontalscroll"
        android:layout_below="@+id/food_drink_buttons"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drinks_submenu_buttons"
        android:weightSum="3"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="#dedede">
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_drinks_juice_title"
            android:textAlignment="center"
            android:onClick="juiceButtonClicked" />
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_drinks_soda_title"
            android:onClick="sodaButtonClicked" />
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_drinks_alcohol_title"
            android:onClick="alcoholButtonClicked" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/food_submenu_buttons"
        android:weightSum="4"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="#d3d3d3">
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_food_appetizer_title"
            android:onClick="appetizerButtonClicked"
            android:maxLines="1" />
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_food_lunch_title"
            android:onClick="lunchButtonClicked"
            android:maxLines="1" />

        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_food_entree_title"
            android:onClick="entreeButtonClicked"
            android:maxLines="1" />
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_food_desserts_title"
            android:onClick="dessertButtonClicked" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/food_drink_buttons"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:background="#d3d3d3">
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_main_food_title"
            android:onClick="foodButtonPressed" />
        <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menu_button_main_drinks_title"
            android:onClick="drinksButtonPressed"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/order_review_horizontalscroll"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:alpha=".75" />


</RelativeLayout>
